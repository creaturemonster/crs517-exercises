<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="rain.VideoRecording" table="video_recordings">
		<id name="recordingId" column="recording_id">
			<generator class="native"/>
		</id>			
		<property name="director" column="director"/>
		<property name="title" column="title"/>
		<property name="category" column="category"/>
		<property name="imageName" column="image_name"/>
		<property name="duration" column="duration"/>
		<property name="rating" column="rating"/>
		<property name="yearReleased" column="year_released"/>
		<property name="price" column="price"/>
		<property name="stockCount" column="stock_count"/>
	</class>
	
   <!-- TODO 
		Complete the definitions of the named Queries below.
		
	-->
	
			
		<!-- This query should select all the VideoRecording objects
			 whose category matches that value that is set by a named parameter.
			
			Use the named parameter theCategory
			
			HINT:  Your query will look like :
			
			"from rain.VideoRecording where category=:theCategory"
		-->
	
		
	<query name="VideoRecording.byCategory">
		<![CDATA[ from rain.VideoRecording where category=:theCategory ]]>
	</query>


		<!-- This query should select the VideoRecording object
			 whose id matches  that value that is set by a named parameter.
			
			Use the named parameter theRecordingId
			
			HINT:  Your query will look like :
			
			"from rain.VideoRecording where recordingId=:theRecordingId"
		-->

	<query name="VideoRecording.Recording">
		<![CDATA[ from rain.VideoRecording where recordingId=:theRecordingId ]]>
	</query>
		
	
	
</hibernate-mapping>