<!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
        <class name="rain.Duration" table="duration">
			<!--
				 TODO
				
				  Define fields for the Duration
				  i)   id      generator is native
				  ii)  hours   type integer
				  iii) minutes type integer
				  iv)  seconds type integer
					
				-->			

                <id name="id">
                        <generator class="native"/>
                </id>
                 <property name="hours" type="integer"/>
                <property name="minutes" type="integer"/>
                <property name="seconds" type="integer"/>
       </class>
</hibernate-mapping>